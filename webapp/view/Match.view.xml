<mvc:View controllerName="DrThinkingPatient.controller.Match" 
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:mvc="sap.ui.core.mvc" 
	displayBlock="true" 
	xmlns="sap.m">
	<App>
		<pages><Page title="{i18n>title}">
				<content>
					<VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
						<items>
						<Text text="Great! You were matched with Omar ElRafik!"/>
						<Text text="Omar is suffering from a sore throat and runny nose"/>
						<Button width="12rem" text="check profile" press="onPressPatientProfile" type="Emphasized"/>
						<Button width="12rem" text="accept and chat" press="onPressChat"/>
						<Button width="12rem" text="reject" press="onPressReject"/>
						</items>
					</VBox>	
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>