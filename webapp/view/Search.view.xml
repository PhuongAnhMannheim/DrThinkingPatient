<mvc:View 
	xmlns:l="sap.ui.layout" 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" 
	xmlns:tnt="sap.tnt" 
	controllerName="DrThinkingPatient.controller.Search">
	<App id="app">
			<Page 
				title="{i18n>title}"
				showHeader="false" >
			<content>
					<VBox
						justifyContent="Center" 
						alignItems="Center" 
						alignContent="Center">
						<items>
							<Text
								text="Searching for available doctors that fit your symptom ..." 
								width="200px"
								class="center"></Text>
							<Image 
								id="Imgloupe"
								src="img/lupe.jpg" 
								width="30%"
								class="center"></Image>
							<BusyIndicator size="4.6em" />
						</items>
					</VBox>	
			</content>
		</Page>
	</App>
</mvc:View>